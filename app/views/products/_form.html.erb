<%= form_for @product  do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.text_field :price %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :inventory %>
    <%= f.text_field :inventory %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>
