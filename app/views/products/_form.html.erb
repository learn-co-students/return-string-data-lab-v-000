
<%= form_for(@product) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price %><br></br>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %><br>
  </div>

  <div>
    <%= f.label :inventory %>
    <%= f.number_field :inventory %><br>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
  <% end %>
