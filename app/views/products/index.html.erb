<% @products.each do |product| %>
  <h1><%= product.name %></h1>
  <p id="description-<%= product.id %>"><%= truncate product.description if product.description %></p>
  <p id="inventory-<%= product.id %>"></p>
  <button class="js-more" data-id="<%= product.id %>">More Info</button>
<% end %>

