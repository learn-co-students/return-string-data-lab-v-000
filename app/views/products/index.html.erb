<% @products.each do |product| %>
    <%= product.name %>
    <%= product.price %>
  <% end %>
  
  <script type="text/javascript" charset="utf-8">
  $(function () {
    $(".js-more").on('click', function() {
      // get the id from the data attribute
      let id = $(this).data("id");
      $.get("/posts/" + id + "/body", function(data) {
        $("#body-" + id).text(data);
      });
    });
  });
  </script>
