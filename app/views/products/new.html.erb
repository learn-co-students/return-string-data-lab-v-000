<%= form_for @product do |f| %>
<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name, id: 'name' %>
</div>

<div class="field">
  <%= f.label :description %><br>
  <%= f.text_field :description, id: 'description' %>
</div>

<div class="field">
  <%= f.label :inventory%><br>
  <%= f.text_field :inventory, id: 'inventory' %>
</div>
<div class="action">
  <%= f.submit %>

</div>

<% end %>
