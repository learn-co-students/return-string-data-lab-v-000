<div class='form'>
  <%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>

    <%= f.label :price %>
    <%= f.number_field :price %><br>

    <%= f.label :inventory %>
    <%= f.number_field :inventory %><br>

    <%= f.label :description %>
    <%= f.text_area :description, {rows:5} %><br>

    <%= f.submit "Create Product", class:'btn' %>
  <% end %>
</div>
