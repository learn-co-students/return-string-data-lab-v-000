<h2>New Product</h2>
<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <p>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <p>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <p>
  <%= f.label :inventory %>
  <%= f.text_field :inventory %>
  <%= f.submit "submit" %>
<% end %>
