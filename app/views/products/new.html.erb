<h1>New Product</h1>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :price %>
  <%= f.number_field :price %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.label :inventory %>
  <%= f.number_field :inventory, nil, min: 0 %><br>

  <%= f.submit "submit" %>
<% end %>
