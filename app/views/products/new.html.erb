<h1>Add a Product</h1>
<%= form_for(@product) do |f| %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <br/>

  <div class="field">
  	<%= f.label :price %><br>
  	<%= f.text_field :price %>
  </div>
  <br/>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <br/>

  <div class="field">
  	<%= f.label :inventory %><br>
  	<%= f.text_field :inventory %>
  </div>	
  	<br/>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
