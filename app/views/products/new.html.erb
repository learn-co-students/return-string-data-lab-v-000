<%= form_for(@product) do |f| %>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
    <br>
    <%= f.label :price %>
    <br>
    <%= f.text_area :price %>
    <br>
    <%= f.label :inventory %>
    <br>
    <%= f.text_area :inventory %>
    <br>
    <%= f.submit "Add Product "%>
<% end %>
