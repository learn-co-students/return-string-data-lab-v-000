
<%= form_for(@product) do |f| %>
  <label>Name:</label>
  <%= f.text_field :name %>
  <label>Price:</label>
  <%= f.number_field :price, :step => 0.01 %>
  <label>Description:</label>
  <%= f.text_area :description %>
  <label>Inventory:</label>
  <%= f.number_field :inventory %>
  <%= f.submit 'Add a product' %>
<% end %>
