<div class='container'>
	<%= form_for @product do |f| %>
		<div>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<div>
			<%= f.label :price %>
			<%= f.number_field :price %>
		</div>
		<div>
			<%= f.label :description %>
			<%= f.text_field :description %>
		</div>
		<div>
			<%= f.label :inventory %>
			<%= f.number_field :inventory %>
		</div>

		<div><%= f.submit %></div>
		<% end %>
</div>
