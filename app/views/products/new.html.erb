<h2>New Product</h2>

<%= form_for @product do |f| %>
  <%= f.text_field :name, placeholder: 'Name' %><br>
  <%= f.text_field :price, placeholder: 'Price' %><br>
  <%= f.text_area :description, placeholder: 'Description' %><br>
  <%= f.text_field :inventory, placeholder: 'Inventory' %><br>
  <%= f.submit %>

<% end %>
