<h1> Create New Product </h1>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :price %>
  <%= f.number_field :price, step: :any %><br>

  <%= f.label :inventory %>
  <%= f.number_field :inventory %><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br>

  <%= f.submit "Create" %>
<% end %>
