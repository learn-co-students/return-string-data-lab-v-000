<%= form_for(@product) do |f| %>
<div class="field" %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
</div>

<div class="field" %>
  <%= f.label :description %>
  <%= f.text_field :description %><br>
</div>

<div class="field" %>
  <%= f.label :inventory %>
  <%= f.text_field :inventory %><br>
</div>

<div class="field" %>
  <%= f.label :price %>
  <%= f.text_field :price %><br>
</div>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
